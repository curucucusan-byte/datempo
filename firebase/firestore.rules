rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Profissionais dispon√≠veis publicamente (landing / clientes)
    match /professionals/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Leads e appointments apenas via servidor (Admin SDK)
    match /leads/{docId} {
      allow read, write: if false;
    }

    match /appointments/{docId} {
      allow read, write: if false;
    }

    // Fallback: bloquear todo o resto
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
