rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Agendas p√∫blicas (slug)
    match /linkedCalendars/{slug} {
      allow read: if true;
      allow write: if false;
    }

    // Leads e appointments apenas via servidor (Admin SDK)
    match /leads/{docId} {
      allow read, write: if false;
    }

    match /appointments/{docId} {
      allow read, write: if false;
    }

    // Fallback: bloquear todo o resto
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
